{
    "name": "php-diffused/lifecycle",
    "description": "Lifecycle hook system for Laravel",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "hooks",
        "lifecycle",
        "events",
        "php"
    ],
    "authors": [
        {
            "name": "PHP Diffused",
            "email": "contact@phpdiffused.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/container": "^11.0|^12.0",
        "illuminate/filesystem": "^11.0|^12.0",
        "illuminate/log": "^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PhpDiffused\\Lifecycle\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PhpDiffused\\Lifecycle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PhpDiffused\\Lifecycle\\LifeCycleServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}